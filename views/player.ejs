<!DOCTYPE html>
<html>

<%- include('./partials/head_header.ejs') %>

<body>

    <section class="firstSection">

        <div class="leftDiv">
            <p class="playerName"><%= player.playerName %></p>
            <p class="playerCountry"><%= player.nationality %></p>
        </div>

        <div class="centerDiv">
            <img src="<%= player.img_url %>" alt="<%= player.playerName %>">

        </div>

        <div class="rightDiv">
            <div class="age">
                <p>Age</p>
                <p class="playerAge infoValue">xx years old</p>
            </div>

            <div class="birth">
                <p>Birthdate </p>
                <p class="playerBD infoValue"><%= player.Birthdate %></p>
            </div>

            <div class="weight">
                <p>Weight</p>
                <p class="playerWeight infoValue"><%= player.playerWeight %></p>
            </div>

            <div class="height">
                <p>Height</p>
                <p class="playerHeight infoValue"><%= player.playerHeight %></p>
            </div>

        </div>

    </section>

    <section class="secondSection">
        <h3>Other Stats</h3>

        <div class="playerClub">
            <p>Club Name</p>
            <p class="clubName infoValue"><%= player.club %></p>
        </div>

        <hr>

        <div class="Playerposition">
            <p>Preffered position</p>
            <p class="position infoValue"><%= player.pref_position %></p>
        </div>

        <hr>

        <div class="playerStats">
            <p>Value</p>
            <p class="position infoValue">
                <%= player.playerValue.split('€')[1].split('$')[0] %> €
            </p>
        </div>

    </section>


    <script src="/static/scripts/player.js"></script>
</body>

</html>